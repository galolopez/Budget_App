@model IEnumerable<Budget_App.Models.Category>

@{
    ViewBag.Title = "Index";
}

<section class="container" style="padding-top: 50px">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-3">
                    @Html.ActionLink("New Category", "Create", null, new { @class = "btn btn-default" })
                </div>
                <div class="col-sm-4 col-sm-offset-1">
                    <center><p style="font-weight: bold; font-size: x-large"><b>CATEGORIES</b></p></center>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Expense
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpenseTF)
                        </td>
                        <td>
                            <a type="button" class="btn btn-default" href="@Url.Action("Edit", "Categories", new { id = item.Id })">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true" title="Edit Category"></span>
                            </a>
                            <a type="button" class="btn btn-default" href="@Url.Action("Delete", "Categories", new { id = item.Id })">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete Category"></span>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>