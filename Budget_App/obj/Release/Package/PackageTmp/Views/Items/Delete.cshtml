@model Budget_App.Models.Item

@{
    ViewBag.Title = "Delete Item";
}


<h2>Are you sure you want to delete @Html.DisplayFor(model => model.Name) item?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Item
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Amount
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            Budget
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Budget.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Back to List", "Index", "Budgets", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
